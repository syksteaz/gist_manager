<div class="container text-center">
  <h1>GistMeUp!</h1>
  <h3>Find the perfect Gist</h3>

  <% if user_signed_in? %>
    <%= link_to 'Your GitHub account', current_user.github, target: "_blank" %>
  <% end %>

  <% @gists.each do |gist| %>
    <%= render 'shared/card', gist: gist %>
  <% end %>

</div>
